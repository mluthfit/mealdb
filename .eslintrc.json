{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-alert": "off",
        "no-underscore-dangle": "off",
        "func-names": "off",
        "prefer-promise-reject-errors": "off",
        "import/no-extraneous-dependencies": [
            "error", 
            {
                "devDependencies": true, 
                "optionalDependencies": false, 
                "peerDependencies": false
            }
        ],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "always",
              "css": "always"
            }
        ]
    }
}
